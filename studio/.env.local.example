# Sanity Studio Environment Configuration

# Sanity Project Configuration
SANITY_STUDIO_PROJECT_ID=3u4fa9kl
SANITY_STUDIO_DATASET=production
SANITY_STUDIO_API_VERSION=2024-01-01

# Preview URLs for content preview functionality
SANITY_STUDIO_PREVIEW_URL=http://localhost:3000
SANITY_STUDIO_PREVIEW_URL_PRODUCTION=https://aviatorstrainingcentre.com

# Authentication and Permissions
SANITY_STUDIO_TOKEN=your_sanity_token_here

# Media Management
SANITY_STUDIO_MEDIA_MAX_SIZE=5242880
SANITY_STUDIO_MEDIA_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif

# Workflow and Notifications
SANITY_STUDIO_ENABLE_NOTIFICATIONS=true
SANITY_STUDIO_NOTIFICATION_EMAIL=admin@aviatorstrainingcentre.com

# Performance and Caching
SANITY_STUDIO_USE_CDN=true
SANITY_STUDIO_CACHE_DURATION=3600

# Development vs Production
NODE_ENV=development
SANITY_STUDIO_ENVIRONMENT=development

# CORS Configuration
SANITY_STUDIO_ALLOWED_ORIGINS=http://localhost:3000,https://aviatorstrainingcentre.com,https://www.aviatorstrainingcentre.com

# Feature Flags
SANITY_STUDIO_ENABLE_VISION_TOOL=true
SANITY_STUDIO_ENABLE_SCHEDULED_PUBLISHING=true
SANITY_STUDIO_ENABLE_INTERNATIONALIZATION=true
SANITY_STUDIO_ENABLE_WORKFLOW_MANAGEMENT=true