# Sanity CMS Configuration - REQUIRED for blog functionality
# Get these values from https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity API Token - REQUIRED for write operations (create, update, delete)
# Get this from https://sanity.io/manage/personal/tokens
# IMPORTANT: Must have "Editor" or "Administrator" permissions
SANITY_API_TOKEN=your_sanity_write_token_here

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://www.aviatorstrainingcentre.in

# Optional: Sanity Webhook Secret for real-time updates
# SANITY_WEBHOOK_SECRET=your_webhook_secret_here

# Firebase Configuration - REQUIRED for contact forms and analytics
# Get these values from https://console.firebase.google.com/
# Go to Project Settings > General > Your apps > Web app config
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project_id-default-rtdb.firebaseio.com/
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK - REQUIRED for server-side operations (analytics, admin functions)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com

# Email Configuration - REQUIRED for contact forms
# Get API key from https://resend.com/
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Owner notification emails
OWNER1_EMAIL=owner1@yourdomain.com
OWNER2_EMAIL=owner2@yourdomain.com

# Admin Dashboard Credentials - REQUIRED for admin access
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password

# Admin Authentication Configuration - OPTIONAL (uses secure defaults)
# JWT secret for session tokens (REQUIRED in production)
ADMIN_JWT_SECRET=your_32_character_jwt_secret_here

# Session duration in seconds (default: 86400 = 24 hours)
ADMIN_SESSION_DURATION=86400

# Maximum failed login attempts before rate limiting (default: 5)
ADMIN_MAX_LOGIN_ATTEMPTS=5

# Rate limit window in seconds (default: 900 = 15 minutes)
ADMIN_RATE_LIMIT_WINDOW=900

# Google Analytics 4 API Configuration - OPTIONAL for enhanced analytics
# Follow API_CREDENTIALS_SETUP_GUIDE.md to get these values
GOOGLE_ANALYTICS_PROPERTY_ID=your_ga4_property_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email_here
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Google Search Console API Configuration - OPTIONAL for search performance data
GOOGLE_SEARCH_CONSOLE_SITE_URL=https://www.aviatorstrainingcentre.in
