# Production Environment Configuration for Aviators Training Centre Blog System
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SANITY CMS CONFIGURATION - REQUIRED
# =============================================================================
# Get these values from https://sanity.io/manage
***REMOVED***
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity API Token - REQUIRED for write operations
# Get this from https://sanity.io/manage/personal/tokens
# IMPORTANT: Must have "Editor" or "Administrator" permissions
SANITY_API_TOKEN=your_sanity_write_token_here

# Sanity Studio Configuration
SANITY_STUDIO_PREVIEW_URL=https://www.aviatorstrainingcentre.in
SANITY_STUDIO_ADMIN_API_KEY=your_admin_api_key_here

# Sanity Webhook Configuration - REQUIRED for real-time updates
SANITY_WEBHOOK_SECRET=your_webhook_secret_here
SANITY_WEBHOOK_URL=https://www.aviatorstrainingcentre.in/api/webhooks/sanity

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=https://www.aviatorstrainingcentre.in
NEXT_PUBLIC_SITE_NAME="Aviators Training Centre"
NEXT_PUBLIC_SITE_DESCRIPTION="Professional Aviation Training and Certification"

# =============================================================================
# FIREBASE CONFIGURATION - REQUIRED
# =============================================================================
# Get these values from https://console.firebase.google.com/
# Go to Project Settings > General > Your apps > Web app config
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=aviators-training-centre.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://aviators-training-centre-default-rtdb.firebaseio.com/
NEXT_PUBLIC_FIREBASE_PROJECT_ID=aviators-training-centre
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=aviators-training-centre.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK - REQUIRED for server-side operations
# Get these from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@aviators-training-centre.iam.gserviceaccount.com
FIREBASE_PROJECT_ID=aviators-training-centre

# =============================================================================
# EMAIL CONFIGURATION - REQUIRED
# =============================================================================
# Get API key from https://resend.com/
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@aviatorstrainingcentre.com
REPLY_TO_EMAIL=info@aviatorstrainingcentre.com

# Owner notification emails
OWNER1_EMAIL=admin@aviatorstrainingcentre.com
OWNER2_EMAIL=director@aviatorstrainingcentre.com

# =============================================================================
# ADMIN DASHBOARD CONFIGURATION
# =============================================================================
# Uses Sanity Studio's built-in Google OAuth - no additional setup required
# Admin access is automatically granted to Sanity project members



# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Search Console (optional)
GOOGLE_SITE_VERIFICATION=your_google_site_verification_code

# =============================================================================
# SEO CONFIGURATION
# =============================================================================
# Default meta tags
NEXT_PUBLIC_DEFAULT_OG_IMAGE=https://www.aviatorstrainingcentre.in/images/og-default.jpg
NEXT_PUBLIC_TWITTER_HANDLE=@AviatorsTCentre

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Vercel Configuration
VERCEL_URL=aviatorstrainingcentre.com
VERCEL_ENV=production

# Build Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://www.aviatorstrainingcentre.in,https://www.aviatorstrainingcentre.com,https://aviators-training-centre-blog.sanity.studio

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis Configuration (optional, for advanced caching)
REDIS_URL=your_redis_url_here

# ISR Configuration
ISR_REVALIDATE_POSTS=3600
ISR_REVALIDATE_PAGES=86400

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry (optional, for error tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Log Level
LOG_LEVEL=info

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Cloudinary (optional, for image optimization)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Mailchimp (optional, for newsletter)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_AUDIENCE_ID=your_mailchimp_audience_id

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features in production
ENABLE_ANALYTICS=true
ENABLE_SEO_AUTOMATION=true
ENABLE_SOCIAL_IMAGE_GENERATION=true
ENABLE_WEBHOOK_PROCESSING=true
ENABLE_PREVIEW_MODE=true
ENABLE_ADMIN_DASHBOARD=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Sanity Backup Configuration
SANITY_BACKUP_ENABLED=true
SANITY_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_RETENTION_DAYS=30