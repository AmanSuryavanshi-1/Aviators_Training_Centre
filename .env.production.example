# Production Environment Variables for Blog System
# Copy this file to .env.local for production deployment

# Sanity CMS Configuration - REQUIRED
***REMOVED***
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
SANITY_API_TOKEN=your_sanity_api_token_with_editor_permissions
SANITY_WEBHOOK_SECRET=your_webhook_secret_for_revalidation

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://www.aviatorstrainingcentre.in

# Analytics and Tracking
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Performance and Caching Configuration
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=your_redis_token_for_upstash
CACHE_TTL=3600
ISR_REVALIDATE_TIME=3600
ENABLE_CACHE_COMPRESSION=true
CACHE_MAX_SIZE=100MB
ENABLE_REDIS_CLUSTER=false
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# Advanced Caching Settings
BLOG_POST_CACHE_TTL=3600
BLOG_LISTING_CACHE_TTL=1800
SEO_DATA_CACHE_TTL=21600
ANALYTICS_CACHE_TTL=900
HEALTH_CHECK_CACHE_TTL=300
ENABLE_CACHE_PRELOADING=true
CACHE_COMPRESSION_LEVEL=6

# Security
NEXTAUTH_SECRET=your_nextauth_secret_for_admin_auth
NEXTAUTH_URL=https://aviatorstrainingcentre.com
CORS_ORIGINS=https://aviatorstrainingcentre.com,https://www.aviatorstrainingcentre.in
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# N8N Integration
N8N_WEBHOOK_SECRET=your_n8n_webhook_secret
N8N_API_KEY=your_n8n_api_key
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
METRICS_ENDPOINT_ENABLED=true
HEALTH_CHECK_ENABLED=true

# CDN and Assets
NEXT_PUBLIC_CDN_URL=https://cdn.aviatorstrainingcentre.com
ASSET_PREFIX=https://cdn.aviatorstrainingcentre.com
IMAGE_OPTIMIZATION_ENABLED=true
WEBP_ENABLED=true
AVIF_ENABLED=true

# Database (if using additional storage)
DATABASE_URL=your_database_url_for_analytics
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@aviatorstrainingcentre.com
ADMIN_EMAIL=admin@aviatorstrainingcentre.com

# Feature Flags
ENABLE_FALLBACK_SYSTEM=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_N8N_INTEGRATION=true
ENABLE_ADMIN_INTERFACE=true
ENABLE_SEO_OPTIMIZATION=true
ENABLE_BLOG_COMMENTS=false
ENABLE_SOCIAL_SHARING=true

# Production Optimization
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
ANALYZE_BUNDLE=false
OPTIMIZE_IMAGES=true
PRELOAD_FONTS=true
CRITICAL_CSS_INLINE=true
SERVICE_WORKER_ENABLED=true
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true
ENABLE_TREE_SHAKING=true
BUNDLE_ANALYZER=false
OPTIMIZE_CSS=true
OPTIMIZE_FONTS=true

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=production
BUILD_ID=auto-generated
DEPLOYMENT_TIMESTAMP=auto-generated
VERSION=1.0.0
DEPLOYMENT_REGION=auto
ENABLE_EDGE_FUNCTIONS=true
CDN_CACHE_TTL=31536000
STATIC_CACHE_TTL=86400

# External Services
GOOGLE_FONTS_API_KEY=your_google_fonts_api_key
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret