# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# REQUIRED VARIABLES - These MUST be set for production deployment
# =============================================================================

# Sanity Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_sanity_api_token_with_read_write_permissions

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
JWT_EXPIRES_IN=1h

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-production-domain.com

# =============================================================================
# OPTIONAL VARIABLES - These enhance functionality but are not required
# =============================================================================

# Logging and Monitoring
LOGGING_ENABLED=true
LOGGING_ENDPOINT=https://your-logging-service.com/api/logs
LOGGING_API_KEY=your_logging_api_key

# Alerting Configuration
ALERTING_ENABLED=true
SLACK_ALERTS_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_ALERT_CHANNEL=#alerts
EMAIL_ALERTS_ENABLED=true
ALERT_EMAIL_RECIPIENTS=admin@yourdomain.com,devops@yourdomain.com

# Webhook Alerts
WEBHOOK_ALERTS_ENABLED=false
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
ALERT_WEBHOOK_TOKEN=your_webhook_token

# Security Logging
SECURITY_LOG_ENDPOINT=https://your-security-logging-service.com/api/events
SECURITY_LOG_API_KEY=your_security_logging_api_key

# Rate Limiting Thresholds
AUTH_FAILURE_THRESHOLD_PER_MINUTE=10
AUTH_FAILURE_THRESHOLD_PER_HOUR=100
ERROR_RATE_THRESHOLD_PERCENTAGE=5
RESPONSE_TIME_THRESHOLD_MS=5000

# Build Configuration
BUILD_ID=production-v1.0.0
DOCKER_BUILD=false
ANALYZE=false

# =============================================================================
# DEPLOYMENT SPECIFIC VARIABLES
# =============================================================================

# Vercel Deployment
VERCEL_URL=your-app.vercel.app
VERCEL_ENV=production

# Docker Deployment
DOCKER_IMAGE_TAG=latest
CONTAINER_PORT=3000

# Database/Storage (if using external services)
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://user:password@host:port

# CDN Configuration (if using external CDN)
# CDN_URL=https://cdn.yourdomain.com
# ASSET_PREFIX=https://cdn.yourdomain.com

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Analytics
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Email Service (for notifications)
# RESEND_API_KEY=your_resend_api_key
# SENDGRID_API_KEY=your_sendgrid_api_key
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_password

# External APIs
# EXTERNAL_API_KEY=your_external_api_key
# EXTERNAL_API_URL=https://api.external-service.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-production-domain.com,https://your-studio-domain.com

# Trusted Hosts
TRUSTED_HOSTS=your-production-domain.com,your-studio-domain.com

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_REFRESH_THRESHOLD=300000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=80
IMAGE_FORMATS=webp,avif

# =============================================================================
# DEVELOPMENT/DEBUGGING (should be false in production)
# =============================================================================

# Debug Flags
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SOURCE_MAPS=false

# Development Tools
NEXT_TELEMETRY_DISABLED=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with actual values to version control
# 2. Use a secure method to set these variables in your deployment environment
# 3. Regularly rotate sensitive values like JWT_SECRET and API tokens
# 4. Monitor your logs for any exposed secrets
# 5. Use environment-specific values (staging vs production)
# 6. Consider using a secrets management service for sensitive data